<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.prakhar_squared_mayank.grs.ProfileActivity">

        <FrameLayout
            android:id="@+id/pic_frame_ap"
            android:layout_gravity="center"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp">
            <ImageView
                android:id="@+id/profile_pic_ap"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/default_profile"
                android:background="#029847"/>
            <TextView
                android:layout_marginLeft="1.5dp"
                android:paddingLeft="0dp"
                android:layout_gravity="bottom"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:text="Change Profile Pic"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="#a8000000"/>
        </FrameLayout>

        <TextView
            android:id="@+id/name_ap"
            android:layout_width="170dp"
            android:layout_height="130dp"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:text="James Bond"
            android:textSize="25dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/username_text_ap"
            android:layout_width="wrap_content"
            android:layout_below="@id/name_ap"
            android:layout_height="wrap_content"
            android:text="Username: "
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/username_ap"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@id/username_text_ap"
            android:layout_toRightOf="@id/username_text_ap"
            android:layout_height="wrap_content"
            android:text="Bond007"
            android:textSize="16dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/fname_text_ap"
            android:layout_width="wrap_content"
            android:layout_below="@id/username_text_ap"
            android:layout_height="wrap_content"
            android:text="First Name: "
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/fname_ap"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@id/fname_text_ap"
            android:layout_toRightOf="@id/fname_text_ap"
            android:layout_height="wrap_content"
            android:text="James"
            android:textSize="16dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/lname_text_ap"
            android:layout_width="wrap_content"
            android:layout_below="@id/fname_text_ap"
            android:layout_height="wrap_content"
            android:text="Last Name: "
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/lname_ap"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@id/lname_text_ap"
            android:layout_toRightOf="@id/lname_text_ap"
            android:layout_height="wrap_content"
            android:text="Bond"
            android:textSize="16dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/entry_text_ap"
            android:layout_width="wrap_content"
            android:layout_below="@id/lname_text_ap"
            android:layout_height="wrap_content"
            android:text="Entry No.: "
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/entry_ap"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@id/entry_text_ap"
            android:layout_toRightOf="@id/entry_text_ap"
            android:layout_height="wrap_content"
            android:text="2007CS10007"
            android:textSize="16dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/contact_text_ap"
            android:layout_width="wrap_content"
            android:layout_below="@id/entry_text_ap"
            android:layout_height="wrap_content"
            android:text="Contact No.: "
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/contact_ap"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@id/contact_text_ap"
            android:layout_toRightOf="@id/contact_text_ap"
            android:layout_height="wrap_content"
            android:text="9007007007"
            android:textSize="16dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/email_text_ap"
            android:layout_width="wrap_content"
            android:layout_below="@id/contact_text_ap"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/email_ap"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@id/email_text_ap"
            android:layout_toRightOf="@id/email_text_ap"
            android:layout_height="wrap_content"
            android:text="iLoveToKill@MI6.com"
            android:textSize="16dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/hostel_text_ap"
            android:layout_width="wrap_content"
            android:layout_below="@id/email_text_ap"
            android:layout_height="wrap_content"
            android:text="Hostel: "
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/hostel_ap"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@id/hostel_text_ap"
            android:layout_toRightOf="@id/hostel_text_ap"
            android:layout_height="wrap_content"
            android:text="MI6 Hostel"
            android:textSize="16dp"
            android:layout_marginTop="5dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hostel_text_ap"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/group_text_ap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="20dp"
                android:text="Join Group: "/>
            <EditText
                android:id="@+id/group_input_ap"
                android:layout_centerVertical="true"
                android:layout_width="200dp"
                android:layout_toRightOf="@id/group_text_ap"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Group Name"/>
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
